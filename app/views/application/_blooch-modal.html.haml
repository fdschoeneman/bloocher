.modal.hide.fade{ id: "bloochModal#{wine.id}", "aria-hidden" => "false", "aria-labelledby" => "#{wine.name}", role: "dialog", tabindex: "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    #myModalLabel.centered
      %h3= wine.winery.name.titleize
      %h2= wine.name.titleize
  .modal-body
    = simple_form_for([wine, @review])  do |f|
      = f.input :wine_id, as: :hidden, input_html: { value: wine.id }
      = text_field_tag 'adjective_1', nil, validate: { presence: true }, placeholder: "An adjective"
      = ", "
      = hidden_review_item(intmodifier)
      = intmodifier
      = text_field_tag 'adjective_2', nil, placeholder: "another adjective"
      - if wine.category
        = wine.category + "."
      - else
        #{text_field_tag :varietal}
      = adverb
      = text_field_tag :flavor_1, nil, placeholder: "a flavor"
      = ", " + strength
      = text_field_tag :flavor_2, nil, placeholder: "another flavor"
      = ".  Pair with "
      = text_field_tag :food, nil, placeholder: "a food or dessert"      
      = ".  Drink between "
      = number_field_tag :drink_after, nil, in: Date.today.year...2033, placeholder: "today"
      = " and "
      = number_field_tag :drink_before, nil, in: Date.today.year...2033, placeholder: "never"
      = "."
      .modal-footer
        .pull-left
          - if user_signed_in?
            Reviewing as #{current_user.name}
          - else
            = f.simple_fields_for :user do |fu|
              = text_field_tag 'review[user][email]', nil, placeholder: "bucky.walter@bloocher.com"
        .pull-right
          %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
          = f.button :submit, 'Publish this blooch', class: 'btn-primary'


:javascript
  $('#bloochModal#{wine.id}').on('shown', function () {
  $(ClientSideValidations.selectors.forms).validate();
  });
