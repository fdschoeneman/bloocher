.modal.hide.fade{ id: "bloochModal#{wine.id}", "aria-hidden" => "false", "aria-labelledby" => "#{wine.name}", role: "dialog", tabindex: "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    #myModalLabel.centered
      %h3= wine.winery.name.titleize
      %h2= wine.name.titleize

  .modal-body
    = simple_form_for([wine, @review], validate: true)  do |f|
      = f.input :wine_id, as: :hidden, input_html: { value: wine.id }
      = text_field_tag 'review[content][adjective]', "adjective"
      = ", "
      = intmodifier
      = text_field_tag 'review[content][adjective]', "another adjective"
      = text_field_tag 'review[content][varietal]', "varietal"
      = ".  "
      = adverb
      = text_field_tag 'review[content][flavor]', "flavor"
      = ", "
      = strength
      = text_field_tag 'review[content][flavor]', "another flavor"
      = ".  Pair with "
      = text_field_tag 'review[content][food]', "food or dessert item"
      = ".  Drink between "
      / = text_field_tag('review[content][drink_after]', options: { min: 2013 } )
      = " and "
      = number_field_tag 'drink_by', nil, in: 2013..2033
      = "."


      / = f.input :review do 
      /   = text_field_tag 'adjective'
      /   = text_field_tag 'adverb'
      - if user_signed_in?
        Reviewing as #{current_user.name}
      - else
        = f.simple_fields_for :user do |fu|
          = fu.input :email, validate: true
      .modal-footer
        %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
        = f.button :submit, 'Publish this blooch', class: 'btn-primary'


:javascript
  $('#bloochModal#{wine.id}').on('shown', function () {
  $(ClientSideValidations.selectors.forms).validate();
  });
