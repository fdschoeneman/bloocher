.row
  %nav.top-bar{"data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1
          - unless controller.action_name == "show" 
            = link_to "Bloocher", root_url, class: "brand"
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span Menu
    %section.top-bar-section
      - unless ["sessions", "confirmations", "wineries"].include? controller_name
        = render 'nav_links'
      