%html{:lang => "en"}
  %head
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "application/#{params[:controller]}"
    = javascript_include_tag "bloocher"

  %body{:class => "#{controller_name} #{action_name}"}
    .container
      = render 'navigation'
      = render 'messages'
    .container
      = yield
    = render 'footer'

    