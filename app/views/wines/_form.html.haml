.form-vertical
  = simple_form_for([@winery, @wine]) do |f|
    = f.error_notification
    .form-inputs
      .span4
        %legend winemaker notes
        = f.input :winemaker_notes, label: false
      
      .span4
        %legend wine log
        = f.input :days_in_oak
        = f.input :new_french_oak
        = f.input :new_french_oak
        = f.input :new_french_oak
        = f.input :new_french_oak
        = f.input :new_french_oak
        = f.input :new_french_oak
      .span4
        %legend general
        = f.input :name
        = f.input :vintage
        = f.input :cases_produced
        / = f.input :winery_id
        = f.input :acid_added
        = f.input :ph
        = f.input :alcohol
        = f.label :bottled_on
        = f.text_field :bottled_on
        = f.label :released_on
        = f.text_field :released_on

        




    .form-actions
      = f.button :submit
