.row
  .span6
    %h1= @winery.name
    %dl
      %dt producer
      %dd= @winery.producer.name
    %p
      %b Public email:
      = @winery.producer.public_email
    %p
      %b Phone:
      = @winery.producer.phone
    %p
      %b Address 1:
      = @winery.producer.address_1
    %p
      %b Address 2:
      = @winery.producer.address_2
    %p
      %b City:
      = @winery.producer.city
    %p
      %b State:
      = @winery.producer.state
    %p
      %b Zip:
      = @winery.producer.zip
    %p
      %b Web address:
      = link_to @winery.producer.web_address, url_for(@winery.producer.web_address) 
    %p
      %b Subdomain:
      = @winery.producer.subdomain

    = link_to 'Edit', edit_winery_path(@winery)
    \|
    = link_to 'Back', wineries_path

  .span6
    #myCanvasContainer
      %canvas#myCanvas{:height => "400", :width => "500"}
    #tags
      %ul
        %li
          %a{:href => "http://www.google.com", :target => "_blank"} Google
        %li
          %a{"data-weight" => "22", :href => "http://www.merciboq.com", :style => "font-size: 4.58ex"} Pinot noir 

        %li= link_to @winery.name
        - @winery.wines.each do |wine|
          = link_to wine.name
        - @winery.winery_tags.each do |tag|
          = link_to tag[0], html_options: { "data-weight" => tag[1] }
.row
  .span12
    %h3
      = "#{@winery_wines.count} Wines" 
.row
  .span12
    #accordion.accordion
      - @wines.each do |wine|
        .accordion-group
          .accordion-heading
            .row
              .span8
                %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", href: "#collapse#{wine.id}"}
                  %h4
                    .badge= wine.rating
                    = "#{wine.vintage} #{wine.name}"
              .span3
                %a.btn{"data-toggle" => "modal", :href => "#myModal", :role => "button"} Blooch about this frati
                .modal.hide.fade{ id: "myModal", "aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
                  .modal-header
                    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
                    .centered
                      %h3= wine.winery.name
                      %h2
                        = wine.vintage 
                        = wine.name.titleize
                  .modal-body.form-horizontal
                    = simple_form_for @review do |f|
                      = f.error_notification
                      = f.hidden_field :wine_id, value: wine.id
                      = f.input :content, label: "notes about this wine", input_html: { rows: 7 }
                      = f.input :rating, collection: 70..100, label: "points"
                      .modal-footer
                        %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
                        = f.button :submit, 'Publish this blooch', :class => 'btn-primary'
          .accordion-body.collapse.in{id: "collapse#{wine.id}" }
            .accordion-inner
              %h4 Winemaker notes #{link_to "read more about this frati", wine_path(wine.id), class: "pull-right" }
              = wine.winemaker_notes
              %br

              .row
                %h4.span1.blooch Blooches

              - wine.reviews.each do |review|
                %p 
                  .badge= review.rating
                  = review.content
                  = link_to review.reviewer.name, user_path(review.reviewer.name)

    .paginate= paginate @wines
/ = render 'winery-wine-review-modal'
