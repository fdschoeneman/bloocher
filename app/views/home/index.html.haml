    #signup-modal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
        %h3#myModalLabel.centered Sign Up
      .modal-body
        %form.form-horizontal
          .control-group
            %label.control-label{:for => "inputUser"} Username
            .controls
              %input#inputUser{:placeholder => "Username", :type => "text"}/
          .control-group
            %label.control-label{:for => "inputEmail"} Email
            .controls
              %input#inputEmail{:placeholder => "Email", :type => "text"}/
          .control-group
            %label.control-label{:for => "inputPassword"} Password
            .controls
              %input#inputPassword{:placeholder => "Password", :type => "password"}/
      .modal-footer
        %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
