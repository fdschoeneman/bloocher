%h1 Add an address
%hr
  = simple_form_for(@address) do |f|
    .row
      .small-12.columns
        .row
          .small-6.columns
            = f.input :address_1
            = f.input :address_2
            = f.input :city
            = f.input :state
            = f.input :zip
          .small-6.columns
            = f.input :public_phone
            = f.input :public_email
            = f.input :public_url
            = f.input :name, placeholder: "home, work, etc"
            = f.country_select :country, ["US"]
    .row 
      .small-12.columns
        = f.button :submit, html_options = { class: "button expand"}
